<%= render 'backoffice/admins/shared/errors' %>

<div class="panel panel-default">
  <div class="panel-heading">
    Editando admin
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= form_for @admin, url: backoffice_admin_path, method: :put do |f| %>
        <div class="form-group">
          <label>E-mail</label>
          <%= f.text_field :email, class: 'form-control', placeholder: 'E-mail' %>
        </div>
        <div class="form-group">
          <label>Name</label>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
        </div>
        <div class="form-group">
          <label>Password</label>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
        <div class="form-group">
          <label>Password Confirmation</label>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
        </div>
        <%= f.submit 'Salvar', class: "btn btn-default"%>
        <% end %>
      </div>
      <!-- /.col-lg-6 (nested) -->
    </div>
    <!-- /.row (nested) -->
  </div>
  <!-- /.panel-body -->
</div>
